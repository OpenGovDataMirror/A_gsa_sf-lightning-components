    <design:attribute name="credit1" default="image credit" label="Image Credit" description="Name of image owner" required="false" />
    <design:attribute name="location1" default="Washington, DC" label="Image Location" description="City, State where image was taken" required="false" />
    <design:attribute name="href1" default="/ContactUs" label="Image Link" description="Navigation URL" required="false" />
    <design:attribute name="hrefTitle1" default="link title" />

